Options -Indexes
#Only disable for some dirs
ServerSignature Off
DefaultLanguage en
AddDefaultCharset utf-8
<ifmodule mod_php4.c>
 php_value zlib.output_compression 16386
 php_flag magic_quotes_gpc off
</ifmodule>
<ifModule mod_php5.c>
 php_value zlib.output_compression 16386
 php_flag magic_quotes_gpc off
</ifModule>
#Which module is installed?
<IfModule mod_deflate.c>
 <FilesMatch "\.(html|txt|ini|js|css|jpg|jpeg|png)$">
  SetOutputFilter DEFLATE
 </FilesMatch>
</IfModule>
<ifModule mod_gzip.c>
 mod_gzip_on Yes
 mod_gzip_dechunk Yes
 mod_gzip_item_include file \.(html|txt|ini|js|css|jpg|jpeg|png)$
 mod_gzip_item_include handler ^cgi-script$
 mod_gzip_item_include mime ^text/.*
 mod_gzip_item_exclude mime ^image/.*
 mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</ifModule>
<ifModule mod_expires.c>
ExpiresActive On
ExpiresDefault A5
ExpiresByType image/png A604800
ExpiresByType image/jpg A604800
ExpiresByType image/jpeg A604800
</ifModule>
<ifModule mod_headers.c>
<FilesMatch "\.(html|txt|css)$">
 Header set Cache-Control "max-age=5"
</FilesMatch>
<FilesMatch ".(ini|js|jpg|jpeg|png)$">
 Header set Cache-Control "max-age=604800"
</FilesMatch>
Header unset ETag
FileETag None
<FilesMatch "\.(html|txt|ini|js|css|jpg|jpeg|png)$">
 Header unset Last-Modified
</FilesMatch>
#Implement long cache for /homepage
</ifModule>
#Which module is installed?
<IfModule mod_speling.c>
 CheckSpelling On
</IfModule>
